{# src/CB/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "CBPlatformBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block cbplatform_body %}

  <h2>Liste des Liens</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('cb_platform_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }},
        le {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) de liens.</li>
    {% endfor %}
  </ul>

{% endblock %}